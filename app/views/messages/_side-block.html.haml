.side-block
  .user
    .user__name
      = current_user.name
    .user__create-room
      = link_to new_group_path, class: "icon fa-lg" do
        %i.fa.fa-pencil-square-o
    .user__edit-account
      = link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon fa-lg'
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to groups_path(group) do
          .groups__name
            = group.name
          .groups__text
            = "最新メッセージ"

